<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.usian.android_app_oschina.MainActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar"
        />

    <LinearLayout
        android:id="@+id/linn"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <FrameLayout
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"/>

    <RadioGroup
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="5"
        android:background="@color/white"
        android:layout_gravity="center"
        >

        <RadioButton
            android:id="@+id/btn_explore_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_comprehensive"
            android:gravity="center"
            android:checked="true"
            android:text="@string/title_zonghe"
            android:textColor="@color/text_xuanzhong"/>

        <RadioButton
            android:id="@+id/btn_explore_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_move"
            android:gravity="center"
            android:text="@string/title_dongtan"
            android:textColor="@color/text_xuanzhong"/>

        <ImageView
            android:id="@+id/iv_explore_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:scaleType="centerInside"
            android:src="@drawable/tab_icon_add_plus"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/btn_explore_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_find"
            android:gravity="center"
            android:text="@string/title_faxian"
            android:textColor="@color/text_xuanzhong"/>

        <RadioButton
            android:id="@+id/btn_explore_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_icon_my"
            android:gravity="center"
            android:text="@string/title_my"
            android:textColor="@color/text_xuanzhong"/>
    </RadioGroup>


</LinearLayout>
