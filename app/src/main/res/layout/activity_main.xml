<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.usian.android_app_oschina.MainActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar"
        />

    <LinearLayout
        android:id="@+id/linn"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"/>
    <RadioGroup
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:weightSum="5"
        android:background="@color/white"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/btn_explore_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_nav_news_normal"
            android:gravity="center"
            android:text="综合" />

        <RadioButton
            android:id="@+id/btn_explore_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_nav_tweet_normal"
            android:gravity="center"
            android:text="动弹" />

        <RadioButton
            android:id="@+id/btn_explore_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_nav_add_normal"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn_explore_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_nav_discover_normal"
            android:gravity="center"
            android:text="发现" />

        <RadioButton
            android:id="@+id/btn_explore_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_nav_my_normal"
            android:gravity="center"
            android:text="我的" />
    </RadioGroup>


</LinearLayout>
