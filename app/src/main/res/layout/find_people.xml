<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/find_people_pic"
        android:layout_margin="10dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/find_people_name"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_dan1"
            android:layout_toRightOf="@id/find_people_pic"
            android:layout_weight="1"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/find_people_home"
            android:textColor="@color/text_yan"
            android:textSize="13dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/find_people_msg"
            android:textColor="@color/black_dan"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>