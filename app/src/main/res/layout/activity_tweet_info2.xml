<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tweet_info2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.usian.android_app_oschina.controller.activity.tweet_activity.TweetInfoActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/tweet_info_userimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           />

        <TextView
            android:id="@+id/tweet_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/black_dan1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tweet_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="13dp"
        android:textColor="@color/black_dan1"/>

    <ImageView
        android:id="@+id/tweet_info_imgsmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tweet_info_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11dp"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/tweet_info_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/dianzan_icon"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/tweet_info_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_comment_30"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/tweet_info_zhuanfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_forward"
            android:layout_gravity="center"/>
    </LinearLayout>
    
    <android.support.design.widget.TabLayout
        android:id="@+id/tweet_info_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabSelectedTextColor="@color/actionbar_background"
        app:tabIndicatorColor="@color/white"
        android:background="@color/dan_bai"></android.support.design.widget.TabLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/tweet_info_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        ></android.support.v4.view.ViewPager>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/tweet_info_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/subscribe_item_bg"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comment_30"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发表评论"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
