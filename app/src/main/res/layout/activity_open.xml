<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_open"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".controller.activity.OpenActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar_icon"
        />

    <WebView
        android:id="@+id/infor_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></WebView>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <android.support.v7.widget.SearchView
            android:id="@+id/send_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:queryBackground="@color/transparent"
            app:iconifiedByDefault="false"
            android:background="@drawable/shape_search_view"
            app:queryHint="@string/search_send_comment"></android.support.v7.widget.SearchView>

    </LinearLayout>

</LinearLayout>
